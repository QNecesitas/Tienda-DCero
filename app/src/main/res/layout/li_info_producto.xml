<?xml version="1.0" encoding="utf-8"?>
<!--0-Contenedor-General-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="12dp"
    android:translationZ="12dp"
    app:cardCornerRadius="12dp">

    <!--Contenedor-Acomodador-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--1-TV Nombre Producto-->
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingTop="5dp"/>

        <!--2-IV Imagen Producto-->
        <ImageView
            android:id="@+id/iv_imagen"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/carpenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre" />

        <!--3-TV Descripcion-->
        <TextView
            android:id="@+id/tv_descripcion"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Creo yo que es lo mas prudente que se podria poner como descripcion no preguntes por que"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_imagen"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <!--4-LLH con textos de "cantidad" y "precio"-->
        <LinearLayout
            android:id="@+id/llh_tv_cantidad_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--4.1 Texto "cantidad"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/cantidad"
                android:layout_weight="1"/>

            <!--4.2 Texto "precio"-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/precio"
                android:layout_weight="1"/>

        </LinearLayout>

        <!--5-LLH con elegir cantidad y ver precio-->
        <LinearLayout
            android:id="@+id/llh_valores_cantidad_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llh_tv_cantidad_precio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--5.1-LLH con elegir cantidad-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:paddingStart="30dp">

                <!--5.1.1-IV "-menos"-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>

                <!--5.1.2-ET de elegir cantidad-->
                <EditText
                    android:id="@+id/et_cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="number"
                    android:minWidth="50dp"/>

                <!--5.1.3-IV "+mas"-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/add"/>

            </LinearLayout>

            <!--5.2-TV valor del precio-->
            <TextView
                android:id="@+id/tv_precio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100 $"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <!--6 CV boton de cancelar-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_boton_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:translationZ="5dp"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/llh_valores_cantidad_precio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cancelar"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

        </androidx.cardview.widget.CardView>

        <!--7 CV boton de ir al carrito-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_boton_carrito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:translationZ="5dp"
            android:elevation="5dp"
            app:layout_constraintTop_toBottomOf="@id/llh_valores_cantidad_precio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/carrito"
                android:textSize="25sp"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>