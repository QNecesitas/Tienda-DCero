<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_marginEnd="50sp"
        android:layout_marginStart="50sp"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="12sp"
        android:translationZ="12sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Image_edit_product"
                android:layout_margin="20sp"
                android:layout_width="130sp"
                android:layout_height="130sp"/>

            <EditText
                android:id="@+id/Name_edit_product"
                android:layout_margin="20sp"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Image_edit_product"/>

            <EditText
                android:layout_margin="20sp"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/Image_edit_product"
                android:layout_below="@id/Name_edit_product"
                />

            <EditText
                android:layout_width="230sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/Image_edit_product"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="20sp"
                android:layout_marginStart="20sp" />




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>